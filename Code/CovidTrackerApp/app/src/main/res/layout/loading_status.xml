<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/loading_progress_spinner"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/updatingLabel"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/updatingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Updating..."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/loading_progress_spinner"
        app:layout_constraintTop_toTopOf="@id/loading_progress_spinner"
        app:layout_constraintBottom_toBottomOf="@id/loading_progress_spinner"/>


</androidx.constraintlayout.widget.ConstraintLayout>